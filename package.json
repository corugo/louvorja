{
    "name": "louvorja",
    "version": "0.1.0",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "shared",
        "server",
        "app",
        "electron"
    ],
    "scripts": {
        "clean": "lerna clean --yes && yarn",
        "build": "lerna run build",
        "app": "yarn workspace @louvorja/app",
        "server": "yarn workspace @louvorja/server",
        "electron": "yarn workspace @louvorja/electron",
        "dev": "concurrently --kill-others \"yarn app dev\" \"yarn server dev\" \"yarn electron dev\"",
        "depcheck": "yarn workspaces --all run depcheck"
    },
    "devDependencies": {
        "concurrently": "^7.6.0",
        "depcheck": "^1.4.3",
        "lerna": "^6.3.0"
    }
}