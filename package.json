{
  "name": "louvorja",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "shared",
    "server",
    "app/control",
    "app/projection",
    "app",
    "electron"
  ],
  "scripts": {
    "clean": "yarn clean:only && yarn",
    "clean:only": "lerna run clean && lerna clean --yes",
    "build": "lerna run build --ignore @louvorja/app-*",
    "test": "lerna run test",
    "app": "yarn workspace @louvorja/app",
    "app-control": "yarn workspace @louvorja/app-control",
    "app-projection": "yarn workspace @louvorja/app-projection",
    "server": "yarn workspace @louvorja/server",
    "shared": "yarn workspace @louvorja/shared",
    "electron": "yarn workspace @louvorja/electron",
    "dev": "concurrently --kill-others \"yarn app-control dev\" \"yarn app-projection dev\" \"yarn server dev\" \"yarn electron dev\"",
    "dev:app": "concurrently --kill-others \"yarn app-control dev\" \"yarn app-projection dev\" \"yarn app dev\"",
    "depcheck": "yarn workspaces --all run depcheck"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "jest": "^29.3.1",
    "lerna": "^6.3.0"
  }
}
